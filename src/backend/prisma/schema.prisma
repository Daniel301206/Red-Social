// ===========================================================
// GENERADOR Y FUENTE DE DATOS
// ===========================================================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================================
// MODELO DE USUARIO
// ===========================================================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String?  // Método tradicional
  googleId  String?  @unique // Método login con Google
  avatar    String?  // Foto de perfil

  // Relación con publicaciones
  posts     Post[]
}

// ===========================================================
// MODELO DE PUBLICACIÓN
// ===========================================================
model Post {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  image       String?    // imagen opcional
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relación con el usuario
  author      User       @relation(fields: [authorId], references: [id])
  authorId    Int
}
